{
    "comments": {
        "blockComment": ["(*", "*)"]
    },
    "brackets":[
        ["(", ")"],
        ["[", "]"],
        ["{", "}"],
    ],
    "autoClosingPairs": [
        { "open": "{", "close": "}" },
        { "open": "[", "close": "]" },
        { "open": "(", "close": ")" },
        { "open": "`", "close": "`" },
        { "open": "\"", "close": "\"", "notIn": ["string", "comment"] },
    ],
    "surroundingPairs": [
        { "open": "[", "close": "]" },
        { "open": "(", "close": ")" },
        { "open": "`", "close": "`" },
        { "open": "\"", "close": "\"" }
    ],
    "wordPattern": {
        "pattern": "[-]?\\d+(\\.\\d*)?|[A-Za-z_'][A-Za-z_'.0-9]*"
    }
}