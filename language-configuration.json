{
    "comments": {
        "blockComment": ["(*", "*)"]
    },
    "brackets":[
        ["(", ")"],
        ["[", "]"],
        ["{", "}"],
    ],
    "autoClosingPairs": [
        { "open": "{", "close": "}" },
        { "open": "[", "close": "]" },
        { "open": "(", "close": ")" },
        { "open": "`", "close": "`" },
        { "open": "\"", "close": "\"", "notIn": ["string", "comment"] },
    ],
    "surroundingPairs": [
        { "open": "[", "close": "]" },
        { "open": "(", "close": ")" },
        { "open": "`", "close": "`" },
        { "open": "\"", "close": "\"" }
    ],
    "wordPattern": {
        "pattern": "-?0[xX][0-9a-fA-F][0-9a-fA-F_]*(\\.[0-9a-fA-F_]*)?([pP][+-]?\\d[\\d_]*)?|-?0[oO][0-7][0-7_]*|-?0[bB][01][01_]*|-?\\d[\\d_]*(\\.[\\d_]*)?([eE][+-]?\\d[\\d_]*)?|[A-Za-z_'][A-Za-z_'.0-9]*"
    }
}